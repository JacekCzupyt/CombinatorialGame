<Page x:Class="CombinatorialGameFrontend.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CombinatorialGameFrontend"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GamePage">

    <Page.Resources>
        <Style TargetType="Button" x:Key="GameTile">
            <Setter Property="Width" Value="50px"/>
            <Setter Property="Height" Value="50px"/>
            <Setter Property="Margin" Value="2px"/>
            <Setter Property="BorderThickness" Value="3px"/>
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel x:Name="GameBoard" Orientation="Horizontal" VerticalAlignment="Top"/>
        <Button Name="ResumeButton" IsEnabled="False" Grid.Row="1" Width="80" Height="30" HorizontalAlignment="Left" Click="NextButton_OnClick">Next</Button>
    </Grid>
</Page>
